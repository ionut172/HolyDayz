@model LastMinute
<form method="post">
    <div asp-validation-summary="All"></div>
    <div class="form-group">
        <label asp-for="NameLastMinute" class="form-label mt-4">Nume Vacanta</label>
        <input asp-for="NameLastMinute" type="text" class="form-control" id="categoryName" placeholder="Introduceți numele vacantei">
    </div>
    <div class="form-group">
        <label asp-for="DisplayOrder" class="form-label mt-4"></label>
        <select asp-for="DisplayOrder" class="form-select" id="displayOrder">
            @for (int i = 1; i < 50; i++)
            {
                <option>@i</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label asp-for="LastMinuteDate" class="form-label mt-4">Nume Vacanta</label>
        <input asp-for="LastMinuteDate" type="date" class="form-control" placeholder="Introduceți data" asp-format="{0:yyyy-MM-dd}">
    </div>

    <div class="form-group">
        <label asp-for="Oras" class="form-label mt-4">Oras</label>
        <input asp-for="Oras" type="text" class="form-control" placeholder="Introduceți Orasul">
    </div>
    <div class="form-group">
        <label asp-for="Pret" class="form-label mt-4">Pret vacanta</label>
        <input asp-for="Pret" type="text" class="form-control" placeholder="Introduceți pret">
    </div>
    <div class="form-group">
        <label asp-for="Descriere" class="form-label mt-4">Descriere vacanta</label>
        <input asp-for="Descriere" type="text" class="form-control" placeholder="Introduceți descrierea">
    </div>
    <button type="submit" class="btn btn-primary mt-4">Trimite</button>
    <button type="button" class="btn btn-light mt-4"><a class="text-dark" asp-controller="LastMinute" asp-action="Index">Inapoi la Vacante</a></button>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}