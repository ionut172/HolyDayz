@model VacanteAPP.Models.Countries

<form method="post">
    <input asp-for="CountryId" hidden />
    <div class="p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">
                Delete Tara
            </h2>
        </div>
    </div>

    <div asp-validation-summary="All"></div>
    <div class="form-group">
        <label asp-for="CountryName" class="form-label mt-4">Nume categorie</label>
        <input asp-for="CountryName" type="text" class="form-control">
        <span asp-validation-for="CountryName" class="text-danger"></span>

    </div>
    <button type="submit" class="btn btn-primary mt-4">Sterge</button>
    <button type="button" class="btn btn-light mt-4"><a class="text-dark" asp-controller="Countries" asp-action="Index">Inapoi la categorii</a></button>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}