@page
@model VacanteAPP_Razor.Pages.Categories.DeleteModel
@{
}

<form method="post">
    <input asp-for="CategoryDeleted.CategoryId" hidden />
    <div class="p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">
                Delete Categorie
            </h2>
        </div>
    </div>

    <div asp-validation-summary="All"></div>
    <div class="form-group">
        <label asp-for="CategoryDeleted.Name" class="form-label mt-4">Nume categorie</label>
        <input asp-for="CategoryDeleted.Name" type="text" class="form-control">
        <span asp-validation-for="CategoryDeleted.Name" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary mt-4">Sterge</button>
    <button type="button" class="btn btn-light mt-4"><a class="text-dark" asp-page="Categories/Index">Inapoi la categorii</a></button>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}